<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PantallaInicio" android:background="@color/blanco_azulado">

    <androidx.cardview.widget.CardView
            android:layout_width="409dp"
            android:layout_height="285dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/gradient_color" app:cardElevation="100dp" android:id="@+id/cardView6">
        <pl.droidsonroids.gif.GifImageView android:layout_width="match_parent" android:layout_height="287dp"
                                           android:layout_marginTop="0dp"
                                           android:src="@drawable/gif_presentacion_inicial"
                                           android:layout_marginStart="3dp"
                                           android:background="@drawable/gradient_color"/>
    </androidx.cardview.widget.CardView>

    <TextView
            android:text="Â¡Bienvenido a TecniStore Online! "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/cardView6"
            android:layout_marginTop="44dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="22sp" android:textStyle="bold"
            android:fontFamily="@font/allerta" android:textAlignment="center"/>
    <pl.droidsonroids.gif.GifImageView
            android:layout_width="97dp"
            android:layout_height="84dp"
            android:src="@drawable/gif_splash"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/gifImageView"/>
    <TextView
            android:text="Si aun te has registrado puedes hacerlo pulsando el boton de Sign Up."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:textAlignment="center" android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/gifImageView" android:layout_marginTop="16dp"/>
    <Button
            android:text="Sign Up"
            android:layout_width="260dp"
            android:layout_height="66dp" android:id="@+id/btnSignUp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="36dp"
            app:layout_constraintHorizontal_bias="0.503" android:textSize="20sp" android:textStyle="bold"/>
    <Button
            android:text="Sing In"
            android:layout_width="260dp"
            android:layout_height="66dp" android:id="@+id/btnSignIn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSignUp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.24" android:textSize="20sp" android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>